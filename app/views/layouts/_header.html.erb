<header role="banner">
    <nav class="mb-1 navbar navbar-expand-sm navbar-dark default-color">
        <% if current_page?('/login') %>
            <div class="logo-and-title">
                <%= image_tag("logo.png", alt: "Logo") %> 
                <div>Console Central</div>
            </div>
            <div class="nav-register">
                <%= link_to 'Register', '/', method: :get%>
            </div>
        <% end %>
        <% if current_page?('/') %>
            <div class="logo-and-title">
                <%= image_tag("logo.png", alt: "Logo") %> 
                <div>Console Central</div>
            </div>
            <div class="nav-login">
                <%= link_to 'Log in', '/login', method: :get %>
            </div>
        <% end %>
        <% if current_user %>
            <div class="logo-and-title">
                <%= link_to dashboard_path do %>
                    <%= image_tag("logo.png", alt: "Logo") %>
                    <div>Console Central</div>
                <% end %>
            </div>
            <div class="header-right-container">
                <%= link_to new_post_path, { class: "header-post-link-container", data: { toggle: "popover", delay: {show: 200, hide: 200 }, content: "Create a new post" } } do %>
                    <i class="fas fa-pen b"></i><i class="fas fa-plus c"></i>
                <% end %>
                <%= link_to posts_path, { class: "header-post-link-container-2", data: { toggle: "popover", delay: {show: 200, hide: 200 }, content: "All" } } do %>
                    <i class="fas fa-clipboard-list"></i>
                <% end %>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
                    <ul class="navbar-nav ml-auto nav-flex-icons">
                        <li class="nav-item dropdown">
                            <a 
                                class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown" aria-haspopup="true" 
                                aria-expanded="false"
                            >
                                <i class="fas fa-user"></i>
                            </a>
                            <div class="dropdown-menu dropdown-default" aria-labelledby="navbarDropdownMenuLink-333">
                                <div class="dropdown-item" href="#"><%= current_user.email %></div>
                                <%= link_to 'Dashboard', dashboard_path %>
                                <%= link_to 'Log Out', logout_path %>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        <% end %>
    </nav>
</header>